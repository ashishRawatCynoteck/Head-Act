<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D2E6FF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/scoreIV"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/score"/>


    <LinearLayout
        android:id="@+id/scoreLL"
        android:layout_below="@id/scoreIV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:background="@drawable/circle"
            android:id="@+id/number_of_correct_strings"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center_horizontal"
            android:textColor="#ffff"
            android:textSize="70sp"
            android:textStyle="bold"
            tools:text="10" />

    </LinearLayout>

    <ListView
        android:id="@+id/correctLV"
        android:layout_centerInParent="true"
        android:layout_below="@id/scoreLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/skipped_strings_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="Skipped"
            android:textColor="#fff"
            android:textSize="40sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/number_of_skipped_strings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@android:color/holo_red_light"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:text="3" />
    </LinearLayout>

</RelativeLayout>